{
	"name": "makerblocks",
	"version": "0.1.0",
	"description": "Custom Gutenberg blocks for WordPress Full Site Editing (FSE)",
	"author": "Prospect Ogujiuba",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"scripts": {
		"preview": "npm-run-all --parallel sync dev",
		"sync": "browser-sync start --proxy \"prospectogujiuba.test\" --files \"makerblocks\" --no-notify --no-inject-changes",
		"tailwind-watch": "npx @tailwindcss/cli -i ./src/styles/vendors/tailwind/_source.scss -o ./src/styles/vendors/tailwind/_tailwind.scss --watch",
		"tailwind-build": "npx @tailwindcss/cli -i ./src/styles/vendors/tailwind/_source.scss -o ./src/styles/vendors/tailwind/_tailwind.scss --minify",
		"sass-dev": "npx sass --watch --no-source-map ./src/styles/styles.scss:./assets/css/styles.css",
		"sass-prod": "npx sass --style=compressed --no-source-map ./src/styles/styles.scss:./assets/css/styles.css",
		"wp-build": "wp-scripts build --source-path=src/scripts --output-path=assets/js",
		"wp-start": "wp-scripts start --source-path=src/scripts --output-path=assets/js",
		"wp-build-blocks": "wp-scripts build --experimental-modules --source-path=src/blocks-dev --output-path=blocks",
		"wp-start-blocks": "wp-scripts start --experimental-modules --source-path=src/blocks-dev --output-path=blocks",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest --coverage",
		"test:blocks": "node tests/validate-block-structure.js",
		"dev": "npm-run-all --parallel tailwind-watch sass-dev wp-start wp-start-blocks",
		"prod": "npm-run-all --sequential tailwind-build sass-prod wp-build wp-build-blocks"
	},
	"devDependencies": {
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindplus/elements": "^1.0.16",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.1",
		"@types/react": "^19.2.8",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.2",
		"@wordpress/icons": "^6.2.0",
		"@wordpress/scripts": "^30.19.0",
		"browser-sync": "^3.0.4",
		"jsdom": "^27.4.0",
		"npm-run-all": "^4.1.5",
		"sass": "^1.89.2",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.9.3",
		"vitest": "^4.0.17"
	},
	"dependencies": {
		"@heroicons/react": "^2.2.0",
		"@radix-ui/react-accordion": "^1.2.12",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-label": "^2.1.8",
		"@radix-ui/react-slot": "^1.2.4",
		"@radix-ui/react-tabs": "^1.1.13",
		"@tailwindcss/cli": "^4.1.11",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide": "^0.526.0",
		"lucide-react": "^0.554.0",
		"react-router-dom": "^7.7.0",
		"tailwind-merge": "^3.4.0",
		"tw-animate-css": "^1.4.0"
	}
}
